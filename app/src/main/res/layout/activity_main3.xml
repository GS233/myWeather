                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多云"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/week2_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大风"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
            </LinearLayout>
            <!--第3组天气-->
            <LinearLayout
                android:orientation="vertical"
