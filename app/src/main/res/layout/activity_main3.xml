<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_city"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="切换城市"></Button>
        <Button
            android:id="@+id/btn_favor"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="关注列表"></Button>
        <Button
            android:id="@+id/btn_cityCodeSearch"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="用代码查询"></Button>
        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="刷新天气"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="北京"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/tmp"
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:layout_gravity="center_horizontal"
            android:text="30"
            android:textColor="#0055FF"
            android:textSize="100dp"></TextView>

        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="多云"
            android:textColor="#AAAAAA"
            android:textSize="50dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="50dp">

            <TextView
                android:id="@+id/tv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="西北风 2级"
                android:textSize="25dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                           "
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/tv_rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:text="降水 有"
                android:textSize="25dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/week1_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周四"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/week1_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#000000"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/week1_climate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多云"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/week1_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大风"
                    android:textColor="#000000"
                    android:textSize="15dp"/>
            </LinearLayout>

            <!--第二组天气-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <TextView
